<html>
    <head>
        <link rel="stylesheet" href="styles.css" type="text/css">
        <link rel="stylesheet" href="postcreate.css" type="text/css">
        <link rel="stylesheet" href="profile.css" type="text/css">
        
		<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="myscript.js"></script>

        <link rel="icon" href="sprites/icon.png">
        <title>
            DoggyMate
        </title>
    </head>
    <body>
        <header>
            {{>header}}
        </header>

        <section class="container">
            <div class="content">
                {{#each user}}
                    <div class="profilecontainer">
                        <div class="imgcontainer">
                            <img class="imguser" src="/userphoto/{{_id}}">
                        </div>
                        <div class="detailscontainer">
                            <span class="userprofilebold">{{firstname}} {{lastname}}</span>
                            <span class="userprofile">({{username}})</span>
                        </div>
                    </div>
                    <div class="reqdivider d1"></div>
                    {{#unless dogpost}}
                        <div class="nonecenter">{{#if isme}}You have{{/if}}{{#unless isme}}This user has{{/unless}} no posts yet</div>
                    {{/unless}}
                    <div class="allposts">
                        {{#each dogpost}} 
                            <a href="/post{{_id}}" class="dogpost-browse {{gender}}">
                                <div class="dogpicture-browse"><img src="/photo/{{_id}}" class="pic-browse"></div>
                                <div class="dogname-browse title">{{dogname}}</div>
                                <div class="dogbreed-browse body">({{breed}})</div>
                            </a>
                        {{/each}}
                    </div>
                {{/each}}
                </div>
            </div>
        </section>

        <footer>
            {{>footer}}
        </footer>
    </body>
</html>