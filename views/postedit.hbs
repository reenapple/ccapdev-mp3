<html>
    <head>
        <link rel="stylesheet" href="styles.css" type="text/css"> 
        <link rel="stylesheet" href="postcreate.css" type="text/css"> 
        
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="myscript.js"></script>
        
        <link rel="icon" href="sprites/icon.png">
        <title>
            DoggyMate
        </title>
    </head>

    <body>
        {{#unless success}}

        <header>
            {{>header}}
        </header>

        <section class="smallcontainer">
            <div class="content">
                <div class="title"> Edit Post </div>
                
                
                {{#if error}}
                <br>
                <div class="centererror">
                    <div class="error">{{error}}</div>
                </div>
                {{/if}}
                <br>

                {{#each dogpost}}
                <div class="postform">
                    <form method="POST" action="editpost{{_id}}"> 
                        Dog name <input type="text" class="postinput" value="{{dogname}}" name="dogname"> <br> 
                        Breed <input type="text"  class="postinput" value="{{breed}}" name="breed"> <br> 
                        Location <input type="text" class="postinput" value="{{location}}" name="location"> <br> 
                        Age <input type="number" class="postinput smallwidth" value="{{dogage}}" name="dogage" min="1"> <br> 
                        Gender <select class="postinput smallwidth" name="dogender"> 
                            <option value="{{gender}}"> {{gender}} </option>
                            <option value="female"> Female </option>
                            <option value="male"> Male </option>
                        </select>
                        <br> 

                        Short Description <textarea rows = "5" class="postinput bigheight" name="dogdesc">{{dogdesc}}</textarea><br>
                        
                        <a href="/deletepost{{_id}}" class="button bred floatleft" style="font-size: small;">Delete Post</a>
                        <div class="postbuttons floatright">
                            <a href="/post{{_id}}" class="button bpurple">Cancel</a> 
                            <input class="button bblue" type="submit" value="Save">
                        </div>
                    </form>
                </div>
                {{/each}}
            </div>
        </section>

        <footer>
            {{>footer}}
        </footer>
        {{/unless}}


        {{#if success}}
        <section class="smallestcontainer">
            <div class="content">
                <div class="centercontent">
                    <span class="heading">{{success}}</span><br><br><br>
                    <a href="/post{{_id}}" class="button bpurple" style="font-size: small;">Back to Post</a>
                </div>
            </div>
        </section>
        {{/if}}

    </body>
</html>
